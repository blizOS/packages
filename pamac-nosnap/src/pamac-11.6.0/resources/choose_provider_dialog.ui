<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="PamacChooseProviderDialog" parent="AdwMessageDialog">
    <property name="heading" translatable="yes">Choose a Provider</property>
    <property name="resizable">1</property>
    <property name="extra_child">
      <object class="GtkScrolledWindow">
        <property name="min_content_height">200</property>
        <child>
          <object class="GtkBox" id="box">
            <property name="orientation">vertical</property>
            <property name="vexpand">1</property>
            <property name="hexpand">1</property>
            <property name="margin_top">16</property>
            <property name="margin_bottom">16</property>
            <property name="margin_start">16</property>
            <property name="margin_end">16</property>
          </object>
        </child>
      </object>
    </property>
    <property name="default-response">choose</property>
    <property name="close-response">choose</property>
    <responses>
      <response id="choose" translatable="yes">Choose</response>
    </responses>
  </template>
</interface>
